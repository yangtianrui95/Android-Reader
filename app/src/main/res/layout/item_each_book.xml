<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/id_iv_book_img"
            android:layout_width="75dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/id_tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/id_tv_book_subtitle"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_tv_book_title" />


        <TextView
            android:id="@+id/id_tv_book_publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:layout_below="@id/id_tv_book_subtitle" />

        <TextView
            android:id="@+id/id_tv_book_pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_tv_book_publish_date" />

        <TextView
            android:id="@+id/id_tv_book_prize"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_tv_book_pages" />
    </RelativeLayout>
</android.support.v7.widget.CardView>